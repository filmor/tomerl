{project_plugins, [
    {erlfmt, "~> 1.0"},
    {rebar3_ex_doc, "0.2.6"}
]}.

{erlfmt, [
    verbose,
    check
]}.

{edoc_opts, [
    {overview, "src/overview.edoc"},
    {source_path, ["src"]},
    todo
]}.

{ex_doc, [
    {extras, [<<"README.md">>, <<"COPYING">>]},
    {main, <<"readme">>},
    {source_url, <<"https://github.com/filmor/tomerl">>}
]}.

{profiles, [
    {test, [
        {deps, [jsone]},
        {escript_name, "tomerl_test"},
        {escript_incl_apps, [jsone]},
        {escript_emu_args, "%%! -escript main tomerl_test -pz tomerl/tomerl/ebin"},
        {yrl_opts, [{verbose, true}]}
    ]}
]}.
